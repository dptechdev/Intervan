<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :placeholder => "Email address of the submitter." %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, :placeholder => "Specifically describe the issue." %>
  </div>
  <div class="field">
    <%= f.label :solution %>
    <%= f.text_area :solution, :placeholder => "Please only list solutions that have been tested and verified." %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
