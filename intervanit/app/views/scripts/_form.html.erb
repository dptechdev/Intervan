<%= form_for(@script) do |f| %>
  <% if @script.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@script.errors.count, "error") %> prohibited this script from being saved:</h2>

      <ul>
      <% @script.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :placeholder => "Email address of the submitter." %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author, :placeholder => "Name of the author if available." %>
  </div>
  <div class="field">
    <%= f.label :server %><br>
    <%= f.text_field :server, :placeholder => "Name of the server where the script is located." %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, :placeholder => "Specific directory where the script is located." %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :placeholder => "Brief description of what the script does." %>
  </div>
  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_area :code, :placeholder => "Please put code snippet here if available." %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
